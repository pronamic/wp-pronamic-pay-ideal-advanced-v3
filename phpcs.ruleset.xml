<?xml version="1.0"?>

<ruleset name="WordPress Pay Gateway: iDEAL Advanced v3 rules">
	<rule ref="WordPress">
		<exclude name="Generic.Files.LowercasedFilename.NotFound" />

		<exclude name="PEAR.Functions.FunctionCallSignature.Indent" />

		<exclude name="Squiz.Commenting" />
		<exclude name="Squiz.PHP.CommentedOutCode.Found" />

		<exclude name="WordPress.NamingConventions.ValidVariableName.NotSnakeCaseMemberVar" />

		<exclude name="WordPress.VIP.RestrictedFunctions.file_get_contents" />
	</rule>

	<rule ref="WordPress.VIP.SlowDBQuery.slow_db_query">
		<exclude-pattern>/src/Settings.php</exclude-pattern>
	</rule>
</ruleset>
